# enable warnings
function(enable_warnings target)
  if(MSVC)
    target_compile_options(${target} PRIVATE /W4)
    target_compile_options(${target} PRIVATE /WX)
  elseif("${CMAKE_C_COMPILER_ID}" STREQUAL "Clang")
    target_compile_options(${target} PRIVATE -Werror)
    target_compile_options(${target} PRIVATE -Wall)
    target_compile_options(${target} PRIVATE -Wextra)
    target_compile_options(${target} PRIVATE -Wpedantic)
    target_compile_options(${target} PRIVATE -Wno-gnu-zero-variadic-macro-arguments)
  elseif("${CMAKE_C_COMPILER_ID}" STREQUAL "GNU")
    target_compile_options(${target} PRIVATE -Wall)
    target_compile_options(${target} PRIVATE -Wcast-align)
    target_compile_options(${target} PRIVATE -Wcast-qual)
    target_compile_options(${target} PRIVATE -Wconversion)
    target_compile_options(${target} PRIVATE -Wdeclaration-after-statement)
    target_compile_options(${target} PRIVATE -Wdisabled-optimization)
    target_compile_options(${target} PRIVATE -Wdouble-promotion)
    target_compile_options(${target} PRIVATE -Wduplicated-branches)
    target_compile_options(${target} PRIVATE -Wduplicated-cond)
    target_compile_options(${target} PRIVATE -Werror)
    target_compile_options(${target} PRIVATE -Wextra)
    target_compile_options(${target} PRIVATE -Wfloat-equal)
    target_compile_options(${target} PRIVATE -Wframe-larger-than=1024)
    target_compile_options(${target} PRIVATE -Whsa)
    target_compile_options(${target} PRIVATE -Winline)
    target_compile_options(${target} PRIVATE -Winvalid-pch)
    target_compile_options(${target} PRIVATE -Wjump-misses-init)
    target_compile_options(${target} PRIVATE -Wlarger-than=1024)
    target_compile_options(${target} PRIVATE -Wlogical-not-parentheses)
    target_compile_options(${target} PRIVATE -Wlogical-op)
    target_compile_options(${target} PRIVATE -Wmissing-declarations)
    target_compile_options(${target} PRIVATE -Wmissing-include-dirs)
    target_compile_options(${target} PRIVATE -Wmissing-prototypes)
    target_compile_options(${target} PRIVATE -Wnested-externs)
    target_compile_options(${target} PRIVATE -Wnull-dereference)
    target_compile_options(${target} PRIVATE -Wold-style-definition)
    target_compile_options(${target} PRIVATE -Woverlength-strings)
    target_compile_options(${target} PRIVATE -Wpacked)
    target_compile_options(${target} PRIVATE -Wpedantic)
    target_compile_options(${target} PRIVATE -Wredundant-decls)
    target_compile_options(${target} PRIVATE -Wrestrict)
    target_compile_options(${target} PRIVATE -Wshadow)
    target_compile_options(${target} PRIVATE -Wstack-protector)
    target_compile_options(${target} PRIVATE -Wstack-usage=4096)
    target_compile_options(${target} PRIVATE -Wstrict-prototypes)
    target_compile_options(${target} PRIVATE -Wswitch-default)
    target_compile_options(${target} PRIVATE -Wtrampolines)
    target_compile_options(${target} PRIVATE -Wundef)
    target_compile_options(${target} PRIVATE -Wunsafe-loop-optimizations)
    target_compile_options(${target} PRIVATE -Wunsuffixed-float-constants)
    target_compile_options(${target} PRIVATE -Wvector-operation-performance)
    target_compile_options(${target} PRIVATE -Wvla)
    target_compile_options(${target} PRIVATE -Wvla-larger-than=255)
  endif()
endfunction()